{% include 'haut_de_page/haut_de_page.html.twig' %}
<head>
	<link rel="stylesheet" href="{{ asset('css/abonnements.css') }}">
			<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

{% block body %}
	<div class="conteneur-abonnements">
		<div class="grille-abonnements">
			{% for abonnement in abonnements %}
				<div class="carte-abonnement">
					<div class="en-tete-carte">
						<h2>{{ abonnement.nom }}</h2>
						<div class="prix">{{ abonnement.prix }}</div>
					</div>
					<div class="corps-carte">
						<ul class="liste-avantages">
							{% if abonnement.nom == 'basique' %}
								<li>
									Support technique standard</li>
								<li>
									1 institution</li>
								<li>
									2000 utilisateurs</li>
							{% else %}
								<li>
									Support technique prioritaire</li>
								<li>
									1 institution</li>
								<li>
									10 000 utilisateurs</li>
								<li>
									Accès anticipé aux nouvelles fonctionnalités</li>
							{% endif %}
						</ul>
					</div>
					<div class="pied-carte">
						<a href="{{ path('paiement_abonnement', { prix_id: abonnement.prix_id, nom: abonnement.nom }) }}" class="bouton-abonnement">
							S'abonner
						</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}

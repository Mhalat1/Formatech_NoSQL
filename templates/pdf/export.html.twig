<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        @page {
            size: A4;
            margin: 15mm;
        }
        
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            line-height: 1.3;
            margin: 0;
            padding: 0;
            color: #333;
        }
        
        .entete {
            text-align: center;
            margin-bottom: 20px;
            border-bottom: 2px solid #2c3e50;
            padding-bottom: 15px;
        }
        
        .entete h1 {
            margin: 0 0 10px 0;
            font-size: 24px;
            color: #2c3e50;
            text-transform: uppercase;
        }
        
        .info-etudiant {
            background: #f8f9fa;
            padding: 10px;
            margin: 15px 0;
            border-left: 4px solid #3498db;
        }
        
        .info-etudiant h2 {
            margin: 0 0 5px 0;
            font-size: 16px;
            color: #2c3e50;
        }
        
        .tableau-notes {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            font-size: 11px;
        }
        
        .tableau-notes th {
            background: #34495e;
            color: white;
            padding: 8px 6px;
            text-align: left;
            font-weight: bold;
            border: 1px solid #2c3e50;
        }
        
        .tableau-notes td {
            padding: 6px;
            border: 1px solid #bdc3c7;
            vertical-align: top;
        }
        
        .tableau-notes tr:nth-child(even) {
            background: #f8f9fa;
        }
        
        .tableau-notes tr:hover {
            background: #e8f4fd;
        }
        
        .cellule-note {
            text-align: center;
            font-weight: bold;
            font-size: 14px;
        }
        
        .note-excellente { color: #27ae60; }
        .note-bonne { color: #f39c12; }
        .note-moyenne { color: #e67e22; }
        .note-faible { color: #e74c3c; }
        
        .cellule-institution {
            font-size: 10px;
            color: #7f8c8d;
        }
        
        .cellule-session {
            font-size: 10px;
            color: #7f8c8d;
        }
        
        .pied-de-page {
            margin-top: 30px;
            text-align: center;
            font-size: 10px;
            color: #7f8c8d;
            border-top: 1px solid #bdc3c7;
            padding-top: 10px;
        }
        
        .resume {
            display: flex;
            justify-content: space-between;
            margin: 15px 0;
            background: #ecf0f1;
            padding: 10px;
            border-radius: 5px;
        }
        
        .element-resume {
            text-align: center;
        }
        
        .element-resume strong {
            display: block;
            font-size: 16px;
            color: #2c3e50;
        }
        
        .aucun-module {
            text-align: center;
            padding: 40px;
            color: #7f8c8d;
            font-style: italic;
        }

        .message-erreur {
            color: #e74c3c;
            border: 1px solid #e74c3c;
            padding: 10px;
            margin: 10px 0;
            background: #fadbd8;
        }
    </style>
</head>
<body>
    <div class="entete">
        <h1>Relevé de Notes Officiel</h1>
    </div>

    {% if utilisateur is defined and utilisateur is not null %}
    <div class="info-etudiant">
        <h2>{{ utilisateur.prenom ?? '' }} {{ utilisateur.nom ?? '' }}</h2>
        <p><strong>Email:</strong> {{ utilisateur.courriel ?? 'Non renseigné' }}</p>
    </div>
    {% else %}
    <div class="message-erreur">
        Informations utilisateur non disponibles
    </div>
    {% endif %}

    {% set hasModules = false %}
    {% set totalNotes = 0 %}
    {% set noteCount = 0 %}
    
    {% if utilisateurInstitutionSessionModules is defined and utilisateurInstitutionSessionModules is not empty %}
    <table class="tableau-notes">
        <thead>
            <tr>
                <th style="width: 25%;">Module</th>
                <th style="width: 10%;">Note</th>
                <th style="width: 20%;">Session</th>
                <th style="width: 25%;">Institution</th>
                <th style="width: 20%;">Période</th>
            </tr>
        </thead>
        <tbody>
            {% for item in utilisateurInstitutionSessionModules %}
                {% set hasModules = true %}
                <tr>
                    <td>
                        <strong>{{ item.SessionModule.Module.nom ?? 'Module inconnu' }}</strong>
                        {% if item.SessionModule.Module.description is defined and item.SessionModule.Module.description %}
                            <br><small style="color: #7f8c8d;">{{ item.SessionModule.Module.description|slice(0, 80) }}{% if item.SessionModule.Module.description|length > 80 %}...{% endif %}</small>
                        {% endif %}
                    </td>
                    <td class="cellule-note">
                        {% if item.NoteModule is defined and item.NoteModule is not null %}
                            {% set note = item.NoteModule %}
                            {% set totalNotes = totalNotes + note %}
                            {% set noteCount = noteCount + 1 %}
                            <span class="{% if note >= 16 %}note-excellente{% elseif note >= 14 %}note-bonne{% elseif note >= 10 %}note-moyenne{% else %}note-faible{% endif %}">
                                {{ note }}/20
                            </span>
                        {% else %}
                            <span style="color: #95a5a6;">N/A</span>
                        {% endif %}
                    </td>
                    <td class="cellule-session">
                        {% if item.SessionModule.Session is defined and item.SessionModule.Session %}
                            <strong>{{ item.SessionModule.Session.nom ?? 'Session inconnue' }}</strong>
                            {% if item.SessionModule.Session.type is defined %}
                                <br><small>{{ item.SessionModule.Session.type }}</small>
                            {% endif %}
                        {% else %}
                            <span style="color: #95a5a6;">Non renseigné</span>
                        {% endif %}
                    </td>
                    <td class="cellule-institution">
                        {% if item.SessionModule.Institution is defined and item.SessionModule.Institution %}
                            <strong>{{ item.SessionModule.Institution.nom ?? 'Inconnu' }}</strong>
                            {% if item.SessionModule.Institution.adresse is defined %}
                                <br><small>{{ item.SessionModule.Institution.adresse }}</small>
                            {% endif %}
                        {% else %}
                            <span style="color: #95a5a6;">Non renseigné</span>
                        {% endif %}
                    </td>
                    <td class="cellule-session">
                        {% if item.SessionModule.Session is defined 
                          and item.SessionModule.Session.dateDebut is defined 
                          and item.SessionModule.Session.dateFin is defined %}
                            {{ item.SessionModule.Session.dateDebut|date('d/m/Y') }}
                            <br>au<br>
                            {{ item.SessionModule.Session.dateFin|date('d/m/Y') }}
                        {% else %}
                            <span style="color: #95a5a6;">Non définie</span>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endif %}

    {% if not hasModules %}
        <div class="aucun-module">
            <p>Aucun module trouvé pour cet utilisateur.</p>
        </div>
    {% endif %}

    {% if hasModules and noteCount > 0 %}
        <div class="resume">
            <div class="element-resume">
                <strong>{{ noteCount }}</strong>
                <small>Modules évalués</small>
            </div>
            <div class="element-resume">
                <strong>{{ (totalNotes / noteCount)|number_format(2) }}/20</strong>
                <small>Moyenne générale</small>
            </div>
            <div class="element-resume">
                <strong>
                    {% set moyenne = totalNotes / noteCount %}
                    {% if moyenne >= 16 %}Excellent
                    {% elseif moyenne >= 14 %}Bien
                    {% elseif moyenne >= 12 %}Assez Bien
                    {% elseif moyenne >= 10 %}Passable
                    {% else %}Insuffisant
                    {% endif %}
                </strong>
                <small>Appréciation</small>
            </div>
        </div>
    {% endif %}

    <div class="pied-de-page">
        <p>Document généré le {{ date|date('d/m/Y à H:i') }}</p>
        <p>Ce document est un relevé de notes officiel</p>
    </div>
</body>
</html>